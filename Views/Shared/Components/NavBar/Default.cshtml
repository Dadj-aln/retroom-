

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">رتروم</a>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            @if (TempData["UID"] != null)
            {

                <li class="nav-item active">@await Component.InvokeAsync("UserInfo")</li>

            }
            else
            {
                <div>    </div>
            }
        </ul>
        @if (TempData["UID"] == null)
        {
            <form class="form-inline ml-auto" method="post" asp-action="search" asp-controller="Home">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchstring">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        }
        else if ((int)TempData["UID"] == 3)
        {
            <form class="form-inline ml-auto" method="post" asp-action="search" asp-controller="Admin">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchstring">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        }
        else
        {
            <form class="form-inline ml-auto" method="post" asp-action="search" asp-controller="AfterSign">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchstring">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        }
    </div>

</nav>